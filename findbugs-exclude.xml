<FindBugsFilter>

    <!-- Exclude generated ANTLR classes -->
    <Match>
        <Class name="~ai\.grakn\.graql\.internal\.antlr\..*"/>
    </Match>

    <!-- Exclude mocked tasks in engine-->
    <Match>
        <Class name="~ai\.grakn\.engine\.tasks\.mock\..*"/>
    </Match>

    <!-- Exclude test supporting classes-->
    <Match>
        <Class name="~ai\.grakn\.test\..*"/>
    </Match>

    <!-- Exclude a lot of bugs we can't be bothered to fix -->
    <!-- TODO: Re-enable these -->

    <Match>
        <Bug pattern="BC_UNCONFIRMED_CAST"/>
    </Match>

    <Match>
        <Bug pattern="CN_IDIOM_NO_SUPER_CALL"/>
    </Match>

    <Match>
        <Bug pattern="DM_CONVERT_CASE"/>
    </Match>

    <Match>
        <Bug pattern="UR_UNINIT_READ_CALLED_FROM_SUPER_CONSTRUCTOR"/>
    </Match>

    <!--Checks that singleton initialisers are synchronised. Excluded because we do not want -->
    <!--to synchronise on the initialiser in SystemKeyspace - we would incur the overhead every time -->
    <!--the system keyspace was touched. Instead we use a countdown latch in the class-->
    <Match>
        <Bug pattern="LI_LAZY_INIT_STATIC"/>
    </Match>

</FindBugsFilter>